# Database
MONGODB_URI=mongodb://localhost:27017/coastal-resilience
DB_NAME=coastal-resilience

# JWT
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# Server
PORT=5000
NODE_ENV=development

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Social Media API Keys (Required for real-time social media integration)
# Twitter API v2 Bearer Token - Get from https://developer.twitter.com/
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# News API Key - Get from https://newsapi.org/
NEWS_API_KEY=your_news_api_key_here

# RapidAPI Key for Instagram - Get from https://rapidapi.com/
RAPID_API_KEY=your_rapid_api_key_here

# AWS S3 (Optional - for production file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_REGION=ap-south-1

# Email Service (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Government API Integration (Optional)
NDRF_API_URL=https://ndrf.gov.in/api/v1
NDMA_API_URL=https://ndma.gov.in/api/v1
EMERGENCY_API_URL=https://emergency.gov.in/api/v1

# SMS Gateway (Optional)
SMS_API_URL=https://sms.gov.in/api/send
SMS_SENDER_ID=COASTAL
SMS_API_KEY=your_sms_api_key